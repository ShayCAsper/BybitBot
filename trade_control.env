# ================================================
# TRADE CONTROL CONFIGURATION
# Prevents overtrading and manages frequency
# ================================================

# POSITION LIMITS
MAX_POSITIONS=3                    # Maximum total positions at once
MAX_POSITIONS_PER_COIN=1          # Only 1 position per coin (no pyramiding)

# TRADE FREQUENCY CONTROLS
MIN_CANDLES_BETWEEN_TRADES=5      # Wait 5 candles between trades on same coin
SIGNAL_EXPIRY_SECONDS=30          # Ignore duplicate signals for 30 seconds

# COOLDOWN PERIODS (seconds between trades on same coin)
SCALPING_COOLDOWN=60              # 1 minute for scalping
MOMENTUM_COOLDOWN=180             # 3 minutes for momentum  
MEAN_REVERSION_COOLDOWN=300       # 5 minutes for mean reversion
DEFAULT_COOLDOWN=120              # 2 minutes default

# LOOP INTERVALS (how often to check for signals)
LOOP_INTERVAL=5                   # Check every 5 seconds (not 1!)
MIN_INTERVAL=3                    # Never go below 3 seconds
MAX_INTERVAL=30                   # Maximum 30 seconds

# POSITION SIZE CONTROLS
BASE_POSITION_VALUE=100           # Base position in USD
MAX_POSITION_PCT=0.02             # Max 2% of balance per trade
SCALPING_SIZE_MULTIPLIER=0.5     # Use 50% size for scalping
MOMENTUM_SIZE_MULTIPLIER=1.0     # Use 100% size for momentum
MEAN_REVERSION_MULTIPLIER=1.2    # Use 120% size for mean reversion

# RISK CONTROLS
MIN_CONFIDENCE=0.5                # Minimum signal confidence to trade
MAX_DAILY_TRADES=20               # Maximum trades per day
MAX_HOURLY_TRADES=5               # Maximum trades per hour

# STOP LOSS / TAKE PROFIT (as percentage)
SCALPING_SL=0.005                 # 0.5% stop loss for scalping
SCALPING_TP=0.005                 # 0.5% take profit for scalping
MOMENTUM_SL=0.015                 # 1.5% stop loss for momentum
MOMENTUM_TP=0.025                 # 2.5% take profit for momentum
DEFAULT_SL=0.02                   # 2% default stop loss
DEFAULT_TP=0.03                   # 3% default take profit

# ================================================
# RECOMMENDED SETTINGS BY TRADING STYLE
# ================================================

# CONSERVATIVE (Few trades, larger moves)
# MAX_POSITIONS=2
# MIN_CANDLES_BETWEEN_TRADES=10
# DEFAULT_COOLDOWN=300
# LOOP_INTERVAL=10

# MODERATE (Balanced approach)
# MAX_POSITIONS=3
# MIN_CANDLES_BETWEEN_TRADES=5
# DEFAULT_COOLDOWN=180
# LOOP_INTERVAL=5

# AGGRESSIVE (More trades, careful!)
# MAX_POSITIONS=5
# MIN_CANDLES_BETWEEN_TRADES=3
# DEFAULT_COOLDOWN=60
# LOOP_INTERVAL=3